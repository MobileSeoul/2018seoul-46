<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.deprecated.fortest.FirebaseTest">



        <EditText
            android:id="@+id/etFbKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="input subscribe key"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toStartOf="@+id/btRegistFbKey"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btRegistFbKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:onClick="btRegistFbKey"
            android:text="set key"
            app:layout_constraintEnd_toEndOf="parent" />




    <TextView
        android:id="@+id/tvLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="log text" />
</LinearLayout>